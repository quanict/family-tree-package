{
  "compilerOptions": {
    "outDir": "./resources/assets/ts/",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "module": "ES2015",
    "target": "ES6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "declaration": false,
    "strict": true,
    "sourceMap": false,
    "lib": [
      "es2017",
      "es2021",
      "dom"
    ]
  }
}